{
  "name": "dot-launch",
  "version": "1.0.0",
  "description": "Creates HTML launch file to redirect to app URL. Useful when URL is dynamic and generated at run-time (i.e. random port).",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gimelfarb/dot-launch"
  },
  "scripts": {
    "test": "jest --coverage",
    "cli": "./bin/dot-launch.js",
    "lint": "eslint src/",
    "prepublishOnly": "npm run lint && npm test"
  },
  "keywords": [
    "env",
    "launch",
    "debug",
    "dynamic"
  ],
  "author": "Lev Gimelfarb <lev@gimelfarb.net>",
  "license": "ISC",
  "bin": {
    "dot-launch": "./bin/dot-launch.js"
  },
  "files": [
    "bin/dot-launch.js",
    "src/*.js"
  ],
  "jest": {
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/tests/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "eslint": "^6.0.0",
    "eslint-plugin-jest": "^22.7.1",
    "jest": "^24.8.0",
    "mock-fs": "^4.10.1",
    "mocked-env": "^1.3.1"
  }
}
